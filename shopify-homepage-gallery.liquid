{% comment %}
  ALL DOGS ROCK - ICONIC DOG GALLERY
  Simple gallery showcasing iconic dog images
{% endcomment %}

<style>
  .gallery-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .hero {
    text-align: center;
    padding: 80px 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 20px;
    color: white;
    margin-bottom: 60px;
  }

  .hero h1 {
    font-size: 4em;
    margin-bottom: 20px;
    font-weight: 800;
  }

  .hero p {
    font-size: 1.5em;
    opacity: 0.95;
    max-width: 800px;
    margin: 0 auto 30px;
  }

  .cta-btn {
    display: inline-block;
    padding: 20px 50px;
    background: white;
    color: #667eea;
    text-decoration: none;
    border-radius: 50px;
    font-size: 1.3em;
    font-weight: 700;
    transition: all 0.3s;
    margin-top: 20px;
  }

  .cta-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 40px;
    margin-bottom: 60px;
  }

  .dog-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transition: all 0.3s;
  }

  .dog-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 50px rgba(0,0,0,0.2);
  }

  .dog-image {
    width: 100%;
    height: 350px;
    object-fit: cover;
  }

  .dog-info {
    padding: 25px;
  }

  .dog-name {
    font-size: 1.8em;
    font-weight: 700;
    margin-bottom: 10px;
    color: #333;
  }

  .dog-description {
    color: #666;
    margin-bottom: 15px;
    line-height: 1.6;
    font-size: 1.1em;
  }

  .category-badge {
    display: inline-block;
    background: #667eea;
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.9em;
    font-weight: 600;
    margin-bottom: 15px;
  }

  .buy-btn {
    width: 100%;
    padding: 18px;
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1.2em;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
  }

  .buy-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 20px rgba(40, 167, 69, 0.4);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5em;
    }
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="gallery-container">
  <div class="hero">
    <h1>üêï All Dogs Rock! üé®</h1>
    <p>
      Iconic Dogs in Legendary Moments!<br>
      From Michael Jordan's Dunk to the Mona Lisa
    </p>
    <a href="#gallery" class="cta-btn">Shop Iconic Dogs ‚Üí</a>
  </div>

  <div id="gallery" class="gallery-grid">
    <!-- Gallery will be populated by JavaScript -->
  </div>
</div>

<script>
  const API_BASE = 'https://all-dogs-rock-api-v2.vercel.app';

  async function loadGallery() {
    try {
      const response = await fetch(`${API_BASE}/api/poses/list`);
      const data = await response.json();

      if (data.success) {
        displayGallery(data.poses);
      }
    } catch (error) {
      console.error('Error loading gallery:', error);
    }
  }

  function displayGallery(poses) {
    const grid = document.getElementById('gallery');
    grid.innerHTML = '';

    poses.forEach(pose => {
      const card = document.createElement('div');
      card.className = 'dog-card';

      const imageUrl = pose.templateUrl || pose.thumbnailUrl;

      card.innerHTML = `
        <img src="${imageUrl}" alt="${pose.name}" class="dog-image" onerror="this.src='https://via.placeholder.com/350x350?text=${encodeURIComponent(pose.name)}'">
        <div class="dog-info">
          <div class="category-badge">${pose.category}</div>
          <div class="dog-name">${pose.name}</div>
          <div class="dog-description">${pose.description}</div>
          <button class="buy-btn" onclick="buyDog('${pose.id}', '${pose.name}', '${imageUrl}')">
            Shop This Design ‚Üí
          </button>
        </div>
      `;
      grid.appendChild(card);
    });
  }

  function buyDog(poseId, poseName, imageUrl) {
    // Redirect to product page or add to cart
    window.location.href = `/products/iconic-dog-${poseId}`;
  }

  // Load gallery on page load
  loadGallery();
</script>
