<script>
let uploadedImage = null;
let generatedImageUrl = null;

console.log('🐕 All Dogs Rock Shop - AI Creator Initialized');
console.log('API Endpoint: https://all-dogs-rock-api-v2.vercel.app/app-proxy/generate');

function showStep(stepName) {
  document.querySelectorAll('.ai-step').forEach(s => s.style.display = 'none');
  document.getElementById('step-' + stepName).style.display = 'block';
  window.scrollTo({ top: 0, behavior: 'smooth' });
  console.log('📍 Step:', stepName);
}

// File upload
const uploadZone = document.getElementById('uploadZone');
const fileInput = document.getElementById('petPhoto');
const promptInput = document.getElementById('promptInput');
const promptContinueBtn = document.getElementById('promptContinueBtn');

if (uploadZone) {
  uploadZone.onclick = () => fileInput.click();
}

if (fileInput) {
  fileInput.onchange = (e) => {
    const file = e.target.files[0];
    if (!file) return;

    console.log('📷 File selected:', file.name, file.size, 'bytes');

    if (file.size > 10 * 1024 * 1024) {
      alert('File too large! Maximum 10MB');
      return;
    }

    const reader = new FileReader();
    reader.onload = (e) => {
      const img = new Image();
      img.onload = () => {
        // Resize image to max 1024x1024 to prevent GPU memory issues
        const MAX_SIZE = 1024;
        let width = img.width;
        let height = img.height;

        if (width > height && width > MAX_SIZE) {
          height = (height * MAX_SIZE) / width;
          width = MAX_SIZE;
        } else if (height > MAX_SIZE) {
          width = (width * MAX_SIZE) / height;
          height = MAX_SIZE;
        }

        const canvas = document.createElement('canvas');
        canvas.width = width;
        canvas.height = height;
        const ctx = canvas.getContext('2d');
        ctx.drawImage(img, 0, 0, width, height);

        // Convert to base64 with 80% quality to reduce size
        uploadedImage = canvas.toDataURL('image/jpeg', 0.8);

        console.log('✅ Image resized to:', width, 'x', height);
        console.log('✅ Image data size:', uploadedImage.length, 'characters');

        document.getElementById('uploadPlaceholder').style.display = 'none';
        document.getElementById('uploadPreview').style.display = 'block';
        document.getElementById('uploadPreview').innerHTML = '<img src="' + uploadedImage + '" style="max-width:100%; border-radius:15px; max-height:400px; object-fit:contain;">';
        document.getElementById('btnNextToPrompt').style.display = 'block';
      };
      img.src = e.target.result;
    };
    reader.readAsDataURL(file);
  };
}

if (promptInput) {
  promptInput.addEventListener('input', (e) => {
    const text = e.target.value.trim();
    promptContinueBtn.disabled = text.length < 5;
  });
}

function useExample(text) {
  promptInput.value = text;
  promptContinueBtn.disabled = false;
}

async function generateAIImage() {
  if (!uploadedImage) {
    alert('Please upload a photo first!');
    return showStep('upload');
  }

  const prompt = promptInput.value.trim();
  if (!prompt) {
    alert('Please describe your vision!');
    return;
  }

  showStep('loading');
  console.log('🚀 Starting generation...');
  console.log('Prompt:', prompt);
  console.log('Image data length:', uploadedImage.length);

  const progressBar = document.getElementById('progressBar');
  const statusText = document.getElementById('loadingStatus');
  const timeText = document.getElementById('timeRemaining');

  let progress = 0;
  let seconds = 60;

  const progressInterval = setInterval(() => {
    if (progress < 90) {
      progress += Math.random() * 6;
      progressBar.style.width = progress + '%';
      progressBar.textContent = Math.round(progress) + '%';
      seconds -= 2;
      timeText.textContent = Math.max(0, seconds);

      if (progress < 30) statusText.textContent = 'Analyzing your pet photo...';
      else if (progress < 60) statusText.textContent = 'Creating AI artwork that looks like YOUR pet...';
      else statusText.textContent = 'Almost done! Adding final touches...';
    }
  }, 2000);

  try {
    console.log('📡 Calling API...');

    const response = await fetch('https://all-dogs-rock-api-v2.vercel.app/app-proxy/generate', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      body: JSON.stringify({
        prompt: prompt,
        image: uploadedImage,
        premium: false,
        human_in_photo: false
      })
    });

    clearInterval(progressInterval);
    progressBar.style.width = '100%';
    progressBar.textContent = '100%';

    console.log('📥 Response status:', response.status);

    const data = await response.json();
    console.log('📦 Response data:', data);

    if (!response.ok) {
      console.error('❌ API Error:', data);
      throw new Error(data.error || data.details || 'Generation failed');
    }

    if (data.success && data.imageUrl) {
      generatedImageUrl = data.imageUrl;
      console.log('✅ SUCCESS! Image URL:', generatedImageUrl);
      statusText.textContent = 'Complete! 🎉';

      setTimeout(() => {
        document.getElementById('selectedImage').src = generatedImageUrl;
        showStep('products');
      }, 1000);
    } else {
      throw new Error('No image generated - unexpected response format');
    }

  } catch (error) {
    clearInterval(progressInterval);
    console.error('❌ GENERATION ERROR:', error);
    console.error('Error details:', error.message);
    alert('Error generating image: ' + error.message + '\n\nPlease check console for details or contact support.');
    showStep('prompt');
  }
}

async function addToCart(variantId) {
  try {
    const response = await fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        items: [{
          id: variantId,
          quantity: 1,
          properties: { '_custom_ai_image': generatedImageUrl }
        }]
      })
    });

    if (!response.ok) throw new Error('Failed to add to cart');

    alert('✅ Added to cart! Your custom image is included.');
    window.location.href = '/cart';
  } catch (error) {
    console.error('Cart error:', error);
    alert('Error: ' + error.message);
  }
}

// Initialize
showStep('welcome');
</script>

