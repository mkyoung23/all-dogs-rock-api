<div class="iconic-dogs-container">
  <!-- Hero Section -->
  <div class="hero-section">
    <h1>üêï Create Your Iconic Dog üé®</h1>
    <p>Transform your dog into legendary moments! Choose from 20 instantly recognizable iconic poses - from Michael Jordan's legendary dunk to the Mona Lisa!</p>
  </div>

  <!-- Photo Upload Section -->
  <div class="breed-input-section">
    <h2>üì∏ Upload Your Dog's Photo</h2>
    <p style="color: #666; margin-bottom: 20px;">We'll swap your dog's face into the iconic pose you choose!</p>
    <input type="file" id="dogPhoto" accept="image/*" style="display: none;" onchange="handleFileUpload(event)">
    <button class="generate-btn" onclick="document.getElementById('dogPhoto').click()" style="max-width: 400px; margin: 0 auto;">
      Choose Photo
    </button>
    <div id="previewSection" style="display: none; margin-top: 20px;">
      <img id="preview" style="max-width: 300px; max-height: 300px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.2); margin: 0 auto; display: block;">
      <p style="margin-top: 10px; color: #667eea; font-weight: 600; text-align: center;">‚úÖ Photo uploaded! Now choose a pose below.</p>
    </div>
    <p id="uploadPrompt" style="margin-top: 15px; color: #999; font-size: 0.9em; text-align: center;">No photo selected</p>
  </div>

  <!-- Poses Grid -->
  <div id="posesGrid" class="poses-grid">
    <!-- Will be populated by JavaScript -->
  </div>
</div>

<!-- Generation Modal -->
<div id="modal" class="modal">
  <div class="modal-content">
    <h2 id="modalTitle">Generating Your Iconic Dog...</h2>
    <div id="loadingSection">
      <div class="spinner"></div>
      <p class="loading">This takes 10-15 seconds. Creating your masterpiece! üé®</p>
      <p style="font-size: 0.9em; color: #999; margin-top: 10px;">Step 1: Generating iconic pose... Step 2: Swapping your dog's face...</p>
    </div>
    <div id="resultSection" style="display: none;">
      <img id="resultImage" class="result-image" alt="Your iconic dog" />
      <br/>
      <button class="add-to-cart-btn" onclick="addToCart()">Add to Cart & Customize Product</button>
      <button class="close-btn" onclick="closeModal()">Close</button>
    </div>
  </div>
</div>

<script>
  const API_BASE = 'https://all-dogs-rock-api-v2.vercel.app';
  let currentImageUrl = '';
  let currentPoseName = '';
  let uploadedDogPhoto = null;

  // Fetch and display poses
  async function loadPoses() {
    try {
      const response = await fetch(`${API_BASE}/api/poses/list`);
      const data = await response.json();

      if (data.success) {
        displayPoses(data.poses);
      }
    } catch (error) {
      console.error('Error loading poses:', error);
    }
  }

  // Display poses in grid
  function displayPoses(poses) {
    const grid = document.getElementById('posesGrid');
    grid.innerHTML = '';

    poses.forEach(pose => {
      const card = document.createElement('div');
      card.className = 'pose-card';
      card.innerHTML = `
        <div class="pose-image">${getCategoryEmoji(pose.category)}</div>
        <div class="pose-info">
          <div class="pose-name">${pose.name}</div>
          <div class="pose-description">${pose.description}</div>
          <div class="pose-category">${pose.category}</div>
          <button class="generate-btn" onclick="generateImage('${pose.id}', '${pose.name}')">
            Create My ${pose.name}
          </button>
        </div>
      `;
      grid.appendChild(card);
    });
  }

  // Get emoji for category
  function getCategoryEmoji(category) {
    const emojis = {
      'Sports': 'üèÄ',
      'Art': 'üé®',
      'Movies': 'üé¨',
      'History': 'üèõÔ∏è',
      'Science': 'üî¨',
      'Music': 'üé∏'
    };
    return emojis[category] || '‚≠ê';
  }

  // Handle photo upload
  function handleFileUpload(event) {
    const file = event.target.files[0];
    if (!file) return;

    // Show preview
    const reader = new FileReader();
    reader.onload = function(e) {
      uploadedDogPhoto = e.target.result;
      document.getElementById('preview').src = e.target.result;
      document.getElementById('previewSection').style.display = 'block';
      document.getElementById('uploadPrompt').style.display = 'none';
    };
    reader.readAsDataURL(file);
  }

  // Generate iconic dog image with FACE SWAP
  async function generateImage(poseId, poseName) {
    // Validate photo is uploaded
    if (!uploadedDogPhoto) {
      alert('‚ö†Ô∏è Please upload a photo of your dog first!');
      return;
    }

    currentPoseName = poseName;

    // Show modal
    const modal = document.getElementById('modal');
    modal.classList.add('active');
    document.getElementById('loadingSection').style.display = 'block';
    document.getElementById('resultSection').style.display = 'none';
    document.getElementById('modalTitle').textContent = `Creating Your ${poseName}...`;

    try {
      const response = await fetch(`${API_BASE}/api/app-proxy/generate`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          poseId: poseId,
          dogPhoto: uploadedDogPhoto
        })
      });

      const data = await response.json();

      if (data.success) {
        currentImageUrl = data.imageUrl;
        showResult(data.imageUrl, poseName);
      } else {
        alert('Error generating image: ' + (data.error || 'Unknown error'));
        closeModal();
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Failed to generate image. Please try again!');
      closeModal();
    }
  }

  // Show result
  function showResult(imageUrl, poseName) {
    document.getElementById('loadingSection').style.display = 'none';
    document.getElementById('resultSection').style.display = 'block';
    document.getElementById('resultImage').src = imageUrl;
    document.getElementById('modalTitle').textContent = `Your ${poseName} is Ready! üéâ`;
  }

  // Close modal
  function closeModal() {
    document.getElementById('modal').classList.remove('active');
  }

  // Add to cart (customize based on your Shopify setup)
  function addToCart() {
    // This is a placeholder - customize based on your product setup
    // You'll need to create products in Shopify and handle variants

    // Option 1: Open product page with image URL in query param
    window.location.href = `/products/custom-iconic-dog?image=${encodeURIComponent(currentImageUrl)}&pose=${encodeURIComponent(currentPoseName)}`;

    // Option 2: Direct add to cart with product variant
    // fetch('/cart/add.js', {
    //   method: 'POST',
    //   headers: { 'Content-Type': 'application/json' },
    //   body: JSON.stringify({
    //     id: YOUR_PRODUCT_VARIANT_ID,
    //     quantity: 1,
    //     properties: {
    //       'Custom Image': currentImageUrl,
    //       'Pose': currentPoseName
    //     }
    //   })
    // }).then(() => window.location.href = '/cart');
  }

  // Load poses on page load
  loadPoses();

  // Allow Enter key in breed input
  document.getElementById('dogBreed').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      e.preventDefault();
    }
  });

  // Close modal on background click
  document.getElementById('modal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeModal();
    }
  });
</script>
