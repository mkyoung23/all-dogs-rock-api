  }

  .upload-icon {
    font-size: 4em;
    margin-bottom: 20px;
  }

  .upload-preview {
    max-width: 300px;
    max-height: 300px;
    border-radius: 15px;
    margin: 20px auto;
    display: none;
  }

  .upload-preview.visible {
    display: block;
  }

  .file-input {
    display: none;
  }

  .upload-btn {
    padding: 15px 40px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 50px;
    font-size: 1.2em;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
  }

  .upload-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
  }

