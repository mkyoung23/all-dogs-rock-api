    cursor: pointer;
    margin-top: 20px;
  }

  .add-to-cart-btn {
    background: #28a745;
    color: white;
    padding: 15px 40px;
    border: none;
    border-radius: 25px;
    font-size: 1.2em;
    font-weight: 700;
    cursor: pointer;
    margin: 20px 10px;
  }

  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 2em;
    }

    .poses-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="iconic-dogs-container">
  <!-- Hero Section -->
  <div class="hero-section">
    <h1>üêï Create Your Iconic Dog üé®</h1>
    <p>Upload a photo of YOUR dog and transform it into legendary moments! We'll place your pup in 20 instantly recognizable iconic poses - from Michael Jordan's legendary dunk to the Mona Lisa!</p>
  </div>

  <!-- Photo Upload Section -->
  <div class="upload-section">
    <h2>1. Upload Your Dog's Photo</h2>
    <div class="upload-area" id="uploadArea" onclick="document.getElementById('fileInput').click()">
      <div class="upload-icon">üì∑</div>
      <p style="font-size: 1.2em; margin-bottom: 10px;">Click to upload or drag & drop</p>
      <p style="color: #666;">Accepted: JPG, PNG (max 10MB)</p>
      <img id="uploadPreview" class="upload-preview" />
    </div>
    <input
      type="file"
      id="fileInput"
      class="file-input"
      accept="image/jpeg,image/png,image/jpg"
      onchange="handleFileUpload(event)"
    />
  </div>

  <!-- Poses Grid -->
  <div class="upload-section">
    <h2>2. Choose an Iconic Pose</h2>
    <p style="color: #666; margin-bottom: 20px;">Select a pose and we'll transform your dog into it!</p>
  </div>

  <div id="posesGrid" class="poses-grid">
    <!-- Will be populated by JavaScript -->
  </div>
</div>

<!-- Generation Modal -->
<div id="modal" class="modal">
  <div class="modal-content">
    <h2 id="modalTitle">Transforming Your Dog...</h2>
    <div id="loadingSection">
      <div class="spinner"></div>
      <p class="loading">This takes 6-8 seconds. Creating your masterpiece! üé®</p>
    </div>
    <div id="resultSection" style="display: none;">
      <img id="resultImage" class="result-image" alt="Your iconic dog" />
      <br/>
      <button class="add-to-cart-btn" onclick="addToCart()">Add to Cart & Buy Product</button>
      <button class="close-btn" onclick="closeModal()">Close</button>
    </div>
  </div>
</div>

<script>
  const API_BASE = 'https://all-dogs-rock-api-v2.vercel.app';
  let uploadedDogPhoto = null;
  let currentImageUrl = '';
  let currentPoseName = '';
  let currentPoseId = '';

  // Handle file upload
  async function handleFileUpload(event) {
    const file = event.target.files[0];
    if (!file) return;

    console.log('üì∑ File selected:', file.name);

    // Show preview
    const reader = new FileReader();
    reader.onload = function(e) {
      const preview = document.getElementById('uploadPreview');
      preview.src = e.target.result;
      preview.classList.add('visible');

      const uploadArea = document.getElementById('uploadArea');
      uploadArea.classList.add('has-image');

      // Store base64 data
      uploadedDogPhoto = e.target.result;

      // Enable poses grid
      document.getElementById('posesGrid').classList.add('enabled');
    };
    reader.readAsDataURL(file);
  }

  // Fetch and display poses
  async function loadPoses() {
    try {
      const response = await fetch(`${API_BASE}/api/poses/list`);
      const data = await response.json();

      if (data.success) {
        displayPoses(data.poses);
      }
    } catch (error) {
      console.error('Error loading poses:', error);
    }
  }

  // Display poses in grid
  function displayPoses(poses) {
    const grid = document.getElementById('posesGrid');
    grid.innerHTML = '';

    poses.forEach(pose => {
      const card = document.createElement('div');
      card.className = 'pose-card';
      card.innerHTML = `
        <div class="pose-image">${getCategoryEmoji(pose.category)}</div>
        <div class="pose-info">
          <div class="pose-name">${pose.name}</div>
          <div class="pose-description">${pose.description}</div>
          <div class="pose-category">${pose.category}</div>
          <button class="generate-btn" onclick="generateImage('${pose.id}', '${pose.name}')">
            Transform My Dog!
          </button>
        </div>
      `;
      grid.appendChild(card);
    });
  }

  // Get emoji for category
  function getCategoryEmoji(category) {
    const emojis = {
      'Sports': 'üèÄ',
      'Art': 'üé®',
      'Movies': 'üé¨',
      'History': 'üèõÔ∏è',
      'Science': 'üî¨',
      'Music': 'üé∏'
    };
    return emojis[category] || '‚≠ê';
  }

  // Generate iconic dog image
  async function generateImage(poseId, poseName) {
    if (!uploadedDogPhoto) {
      alert('Please upload a photo of your dog first!');
      return;
    }

    currentPoseName = poseName;
    currentPoseId = poseId;

    // Show modal
    const modal = document.getElementById('modal');
    modal.classList.add('active');
    document.getElementById('loadingSection').style.display = 'block';
    document.getElementById('resultSection').style.display = 'none';
    document.getElementById('modalTitle').textContent = `Transforming Your Dog into ${poseName}...`;

    try {
      // Use the App Proxy route (goes through Shopify for security)
      const response = await fetch(`${API_BASE}/api/app-proxy/generate`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          dogPhoto: uploadedDogPhoto,
          poseId: poseId
        })
      });

      const data = await response.json();

      if (data.success) {
        currentImageUrl = data.imageUrl;
        showResult(data.imageUrl, poseName);
      } else {
        alert('Error generating image: ' + (data.error || 'Unknown error'));
        closeModal();
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Failed to generate image. Please try again!');
      closeModal();
    }
  }

  // Show result
  function showResult(imageUrl, poseName) {
    document.getElementById('loadingSection').style.display = 'none';
    document.getElementById('resultSection').style.display = 'block';
    document.getElementById('resultImage').src = imageUrl;
    document.getElementById('modalTitle').textContent = `Your ${poseName} is Ready! üéâ`;
  }

  // Close modal
  function closeModal() {
    document.getElementById('modal').classList.remove('active');
  }

  // Add to cart
  function addToCart() {
    window.location.href = `/products/custom-iconic-dog?image=${encodeURIComponent(currentImageUrl)}&pose=${encodeURIComponent(currentPoseName)}`;
  }

  // Load poses on page load
  loadPoses();

  // Drag & drop support
  const uploadArea = document.getElementById('uploadArea');

  uploadArea.addEventListener('dragover', (e) => {
    e.preventDefault();
    uploadArea.style.borderColor = '#764ba2';
    uploadArea.style.background = '#f0f2ff';
  });

  uploadArea.addEventListener('dragleave', () => {
    uploadArea.style.borderColor = '#667eea';
    uploadArea.style.background = '#f8f9ff';
  });

  uploadArea.addEventListener('drop', (e) => {
    e.preventDefault();
    uploadArea.style.borderColor = '#667eea';
    uploadArea.style.background = '#f8f9ff';

    const file = e.dataTransfer.files[0];
    if (file && file.type.startsWith('image/')) {
      document.getElementById('fileInput').files = e.dataTransfer.files;
      handleFileUpload({ target: { files: [file] } });
    }
  });

  // Close modal on background click
  document.getElementById('modal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeModal();
    }
  });
</script>
